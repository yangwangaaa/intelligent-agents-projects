package template;

import java.util.ArrayList;

public class Node {
	private int[] nextAction;
	private int[] times;
	private int[] vehicles;
	private double OValue;

	private int Nt;
	private int Nv;
	
	///////////////////////////////
	//        CONSTRUCTORS       //
	///////////////////////////////
	
	public Node(int[] nextAction, int[] time, int[] vehicle, int Nt, int Nv) {
		this.nextAction = nextAction;
		this.time = time;
		this.vehicle = vehicle;
		this.Nt = Nt;
		this.Nv = Nv;
		this.OValue = -1;
	}
	
	private Node(int[] nextAction, int[] time, int[] vehicle, int Nt, int Nv, double v) {
		this.nextAction = nextAction;
		this.time = time;
		this.vehicle = vehicle;
		this.Nt = Nt;
		this.Nv = Nv;
		this.OValue = v;
	}
	
	///////////////////////////////
	//           UTILS           //
	///////////////////////////////
	
	public Node clone() {
		return new Node((int[]) nextAction.clone(), (int[])time.clone(), (int[])vehicle.clone(), Nt, Nv, OValue);
	}
	
	
	public double getOValue() {
		if (OValue == -1) return this.computeOValue();
		else return OValue;
	}
	
	private double computeOValue() {
		// objective function
		double value = 0;
		
		
		
		return value;
	}
	
	public void setAction(int index, int value) {
		nextAction[index] = value;
	}
	
	public int getAction(int index) {
		return nextAction[index];
	}
	
	public void setTime(int index, int value) {
		time[index] = value;
	}
	
	public int getTime(int index) {
		return time[index];
	}
	
	public void setVehicle(int index, int value) {
		vehicle[index] = value;
	}
	
	public int getVehicle(int index) {
		return vehicle[index];
	}
	
	///////////////////////////////
	//          GET-SET          //
	///////////////////////////////
	
	public int[] getNextAction() {
		return nextAction;
	}


	public void setNextAction(ArrayList<Integer> nextAction) {
		this.OValue = -1;
		this.nextAction = nextAction;
	}


	public int[] getTimes() {
		return time;
	}


	public void setTimes(ArrayList<Integer> time) {
		this.OValue = -1;
		this.time = time;
	}


	public int[] getVehicles() {
		return vehicle;
	}


	public void setVehicles(int[] vehicle) {
		this.OValue = -1;
		this.vehicle = vehicle;
	}
	
	public int getNt() {
		return Nt;
	}

	public void setNt(int nt) {
		this.OValue = -1;
		Nt = nt;
	}

	public int getNv() {
		return Nv;
	}

	public void setNv(int nv) {
		this.OValue = -1;
		Nv = nv;
	}
}
